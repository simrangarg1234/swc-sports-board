<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Name</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Email</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">isAdmin</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Action</th>
                    <!-- <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Delete</th> -->
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">


              <% for (let user of usersList){%>
                <tr>
                    <td class="w-1/3 text-left py-3 px-4"><%= user.name %></td>
                    <td class="w-1/3 text-left py-3 px-4"><a href="" target="_blank"> <%= user.email %></a></td>
                    <td class="w-1/3 text-left py-3 px-4"><a href=""><%= user.isAdmin %></a></td>
                    <td class="w-1/3 text-left py-3 px-4"><form action= "/admin/users/<%= user.outlookId %>?_method=put"
                       method="POST"> <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow"
                        type="submit">make admin</button> </form></td>
                </tr>
                <% }%>
            </tbody>
        </table>
    </div>
</div>


</main>

