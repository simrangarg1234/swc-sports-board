<%- include("../partials/header.ejs") %> 
<main class="flex-grow w-full p-6">
<!-- <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script> -->


<h1 class="pb-6 text-3xl text-black">Spardha</h1>
<div class="mt-6">
    <a class="px-4 py-1 font-light tracking-wider text-white bg-gray-900 rounded" href="/admin/spardha/add">Add Spardha Event</a>
</div>
<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="text-white bg-gray-900">
                <tr>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Club Name</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Date / Time</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Status</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">View</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Edit</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Delete</th>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                <% for (let spardha of spardhas){%> 
                    <tr>
                        <td class="w-1/3 px-4 py-3 text-left"><%= spardha.Clubname %></td>
                        <td class="w-1/3 px-4 py-3 text-left"><%= spardha.DateTime %></td>
                        <td class="w-1/3 px-4 py-3 text-left"><%= spardha.Status %></td>
                     
                        <td class="w-1/3 px-4 py-3 text-left"><a href="/admin/spardha/<%=spardha._id%>" target="_blank">View</a></td>
                        <td class="w-1/3 px-4 py-3 text-left"><a href="/admin/spardha/<%=spardha._id%>/edit">Edit</a></td>
                        <td class="w-1/3 text-left py-3 px-4"><form action="/admin/spardha/<%=spardha._id%>?_method=DELETE" method="POST"> <button type="submit">Delete</button> </form></td>
                    </tr> 
                <% }%>
            </tbody>
        </table>
    </div>
</div>
</main>

<%- include("../partials/footer.ejs") %> 