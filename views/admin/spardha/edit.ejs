<%- include("../partials/header.ejs") %>
<div class="flex-grow w-full p-6">
    <h1 class="pb-6 text-3xl text-black">Edit Clubname</h1>

    <div class="flex flex-wrap justify-center">
        <div class="w-full pr-0 my-6 lg:w-1/2 lg:pr-2">
            <p class="flex items-center pb-6 text-xl">
                <i class="mr-3 fas fa-list"></i> Edit Clubname
            </p>
            <div class="flex items-center px-4 py-3 text-sm font-bold text-white bg-blue-500" role="alert">
                <svg class="w-4 h-4 mr-2" fill="white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path
                        d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
                </svg>
                <p>You need to edit </p>
            </div>
            <div class="leading-loose">
                <form class="p-10 bg-white rounded shadow-xl" action="/admin/spardha/<%=spardha._id%>?_method=PUT" method="POST">
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="Clubname">Club Name</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="Clubname" type="text"
                            name="Clubname" value="<%= spardha.Clubname %>">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="Clubname">Description</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="Description" type="text"
                            name="Description" value="<%= spardha.Description %>">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="DateTime">Date / Time</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="DateTime" type="text"
                            name="DateTime" value="<%= spardha.DateTime %>">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="Status">Status</label>
                        <select class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="Status" name="Status" >
                            <% if(spardha.Status === "Running"){ %> 
                                <option value="Running">Running</option>
                                <option value="Past Event">Past Event</option>
                            <% } else{ %> 
                                <option value="Past Event">Past Event</option>
                                <option value="Running">Running</option>
                            <% } %> 
                        </select> 
                    </div>
                    
                    <div class="mt-3">
                        <button class="px-4 py-1 font-light tracking-wider text-white bg-blue-900 rounded" type="submit">Edit Event</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") %>