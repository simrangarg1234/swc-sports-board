<%- include("../partials/header.ejs") %>
    <h1 class="text-3xl text-black pb-6">Edit Club</h1>

    <div class="flex flex-wrap justify-center">
        <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
            <p class="text-xl pb-6 flex items-center">
                <i class="fas fa-list mr-3"></i> Edit Club
            </p>
            <div class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3" role="alert">
                <svg class="w-4 h-4 mr-2" fill="white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path
                        d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
                </svg>
                <p>You can edit </p>
            </div>
            <div class="leading-loose">
                <form class="p-10 bg-white rounded shadow-xl" action="/admin/club/edit" method="POST"
                    enctype="multipart/form-data">
                    <input type="hidden" name="clubid" value="<%=club._id%>">
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="club">Club</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="club" type="text"
                            name="club" value="<%= club.title%>">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="description">Description</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="description" type="text"
                            name="description" value="<%= club.desc%>">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="achievements">Achievements</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="achievements" name="achievements" type="text"
                            name="achievements" value="<%= club.achievements %>">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="wwd">What we do</label>
                        
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="wwd" name="info" type="text"
                            name="wwd" value="<%= club.info %>">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="image">Add images</label>
                        <div class="gallery shadow-sm">
                            
                            <%for(let i=0;i<club.gallery.length;i++){%>
                                <div class="imgwrap shadow-sm">
                                    <img src="http://localhost:3000/<%=club.gallery[i]%>" width="200px" height="200px" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="">
                                    <a href="/admin/club/<%=club._id%>/delimg/<%=i%>/">X</a>
                                </div>
                             
                            <%}%>
                          </div>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="gallery" type="file"
                            name="images" multiple >
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="pdf">Score card</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="scoreCard" type="file"
                            name="pdf" >
                    </div>
                    <button type="submit" class="btn btn-primary bg-blue-400 rounded">Update</button>
                </form>
            </div>
        </div>
    </div>
    <%- include("../partials/footer.ejs") %>