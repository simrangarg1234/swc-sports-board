<!-- Uploading images and pdf  -->
<div class="mt-20">
    <div class="px-4 py-3 text-white font-light tracking-wider bg-gray-900 rounded" style="display: inline-block;">Present Gallery</div>
  </div>

<div class="leading-loose">
  <form class="p-10 bg-white rounded shadow-xl" action="<%= process.env.BaseUrl %>/admin/club/imgpdf" method="POST"
      enctype="multipart/form-data">
      <input type="hidden" name="clubid" value="<%=data._id%>">
      
      <div class="gallery shadow-sm">

        <%if(data.gallery.length>0){%>
          <%for(let i=0;i<data.gallery.length;i++){%>
              <div class="imgwrap shadow-sm"style = "display: inline-block;">
                  <img src="/<%=data.gallery[i]%>" width="200px" height="200px" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="">
                  <a href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/delimg/<%=i%>/">X</a>
              </div>
          <%}%>
        <%}%>

      </div>

      <div class="mt-2">
          You can add new images
          <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="gallery" type="file"
              name="images" multiple required>
      </div>
      
      <div class="mt-6">
        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded"
            type="submit">Update</button>
      </div>
  </form>
</div>



