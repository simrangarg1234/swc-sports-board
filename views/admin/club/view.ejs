<%- include("../partials/header.ejs") %>
<main class="w-full flex-grow p-6">
  <div class="mt-20">
    <div class="px-4 py-3 text-white font-light tracking-wider bg-gray-900 rounded" style="display: inline-block;">Title</div>
  </div>
  <div class="title w-full px-5 m-2  py-4 text-gray-700 bg-gray-200 rounded"><h1><%=data.title%></h1></div>
  <div class="mt-20">
    <div class="px-4 py-3 text-white font-light tracking-wider bg-gray-900 rounded" style="display: inline-block;">Description</div>
  </div>
  <div class="desc w-full px-5 m-2  py-4 text-gray-700 bg-gray-200 rounded"><%=data.desc%></div>

<div class="mt-20">
    <a class="px-4 py-3 text-white font-light tracking-wider bg-gray-900 rounded" href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/add/head">Add Heads</a>
</div>
  <div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Name</th>
                    <th class="w-2/3 text-right py-3 px-4 uppercase font-semibold text-sm">Positon</th>
                    <th class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm">Edit</th>
                    <th class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm">Delete</th>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                <%for(let i=0;i<data.heads.length;i++){%>

                    <tr>
                        <td class="text-left py-3 px-4"><tbody class="text-gray-700" id="myMenu">
                        <td class="text-left py-3 px-4"><%=data.heads[i].name%></td>
                        <td class="text-right py-3 px-4"><%=data.heads[i].position%></td>

                        <td class="w-1/3 text-right py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/edit/head/<%=i%>">Edit</a></td>
                        
                        <td class="w-1/3 text-right py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/delete/head/<%=i%>">Delete</a></td>
                    </tr>
                <%}%>
            </tbody>
        </table>
    </div>
</div>

<div class="mt-20">
    <a class="px-4 py-3 text-white font-light tracking-wider bg-gray-900 rounded" href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/add/achievement">Add Achievements</a>
</div>
  <div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="w-2/3 text-left py-3 px-4 uppercase font-semibold text-sm">Achievement</th>
                    <th class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm">Edit</th>
                    <th class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm">Delete</th>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                <%for(let i=0;i<data.achievements.length;i++){%>

                    <tr>
                        <td class="text-left py-3 px-4"><tbody class="text-gray-700" id="myMenu">
                        <td class="w-1/3 text-left py-3 px-4"><%=data.achievements[i]%></td>
                        <td class="w-1/3 text-right py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/edit/achievement/<%=i%>">Edit</a></td>
                        <td class="w-1/3 text-right py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/delete/achievement/<%=i%>">Delete</a></td>
                    </tr>
                <%}%>
            </tbody>
        </table>
    </div>
</div>
<div class="mt-20">
  <a class="px-4 py-3 text-white font-light tracking-wider bg-gray-900 rounded" href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/add/info">Add What we do</a>
</div>
<div class="w-auto mt-6 overflow-auto">
  <div class="bg-white">
      <table class="min-w-full bg-white">
          <thead class="bg-gray-800 text-white">
              <tr>
                  <th class="text-left py-3 px-4 uppercase font-semibold text-sm">What we do</th>
