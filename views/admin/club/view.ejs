              </tr>
          </thead>
          <tbody class="text-gray-700" id="myMenu">
              <%for(let i=0;i<data.pe.length;i++){%>

                  <tr>
                      <td class="text-left py-3 px-4"><tbody class="text-gray-700" id="myMenu">
                      <td class="w-2/3 text-left py-3 px-4"><%=data.pe[i]%></td>
                      <td class="w-1/3 text-right py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/edit/pe/<%=i%>">Edit</a></td>
                      <td class="w-1/3 text-right py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/club/<%=data._id%>/delete/pe/<%=i%>">Delete</a></td>
                  </tr>
