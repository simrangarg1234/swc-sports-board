<%- include("../partials/header.ejs") %>
<main class="w-full flex-grow p-6">


<h1 class="text-3xl text-black pb-6">Clubs</h1>
<div class="mt-6">
    <a class="px-4 py-2 text-white font-light tracking-wider bg-gray-900 rounded" href="/stud/gymkhana/sports/admin/club/add">Add Club</a>
</div>
<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Title</th>
                    <th class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm">View</th>
                    <th class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm">Edit</th>
                    <th class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm">Delete</th>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                <%for(let i=0;i<clubs.length;i++){%>

                    <tr>
                        <td class="text-left py-3 px-4"><tbody class="text-gray-700" id="myMenu">
                        <td class="w-2/3 text-left py-3 px-4"><%=clubs[i].title%></td>
                        <td class="w-1/3 text-right py-3 px-4"><a href="/stud/gymkhana/sports/admin/club/view/<%=clubs[i]._id%>" target="_blank">View</a></td>
                        <td class="w-1/3 text-right py-3 px-4"><a href="/stud/gymkhana/sports/admin/club/<%=clubs[i]._id%>/edit/">Edit</a></td>
                        <td class="w-1/3 text-right py-3 px-4"><a href="/stud/gymkhana/sports/admin/club/<%=clubs[i]._id%>/delete/">Delete</a></td>
                        <!-- <td class="w-1/3 text-left py-3 px-4">
                        <form action="" method="POST"> <button type="submit">DELETE</button> </form></td> -->
                        </tr>
                <%}%>


            </tbody>
        </table>
    </div>
</div>


</main>

<%- include("../partials/footer.ejs") %>
