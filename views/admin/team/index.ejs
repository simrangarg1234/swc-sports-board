<%- include("../partials/header.ejs") %> 
<main class="w-full flex-grow p-6">
<!-- <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script> -->


<h1 class="text-3xl text-black pb-6">Team Members</h1>
<div class="mt-6">
    <a class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" href="/admin/team/add">Add Member</a>
</div>
<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Name</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Position</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Hostel</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Email Id</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">View</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Edit</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Delete</th>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                <% for (let team of teams){%> 
                    <tr>
                        <td class="w-1/3 text-left py-3 px-4"><%= team.name %></td>
                        <td class="w-1/3 text-left py-3 px-4"><%= team.position %></td>
                        <td class="w-1/3 text-left py-3 px-4"><%= team.hostel %></td>
                        <td class="w-1/3 text-left py-3 px-4"><%= team.email %></td>
                        <td class="w-1/3 text-left py-3 px-4"><a href="/admin/team/<%=team._id%>" target="_blank">View</a></td>
                        <td class="w-1/3 text-left py-3 px-4"><a href="/admin/team/<%=team._id%>/edit">Edit</a></td>
                        <td class="w-1/3 text-left py-3 px-4"><form action="/admin/team/<%=team._id%>?_method=DELETE" method="POST"> <button type="submit">Delete</button> </form></td>
                    </tr> 
                <% }%>
            </tbody>
        </table>
    </div>
</div>

  
</main>

<%- include("../partials/footer.ejs") %> 