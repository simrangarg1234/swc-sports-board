<%- include("../partials/header.ejs") %> 
<main class="w-full flex-grow p-6">

    <div class="mt-6">
        <div class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" style="display: inline-block;"> Gallery</div>
    </div>
    <form class="p-10 bg-white rounded shadow-xl mt-5" action="<%= process.env.BaseUrl %>/admin/team/gallery" method="POST" enctype="multipart/form-data">

        <% if(gallery && gallery.length !=0 ) { %>
            <% for(var i = 0; i < gallery.length; i++) { %>
                <div class="imgwrap shadow-sm" style = "display: inline-block;">
                  <img src="/stud/gymkhana/sports/<%= gallery[i] %>" width="200px" height="200px" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="">
                  <a href="<%= process.env.BaseUrl %>/admin/team/gallery/<%=i%>/">X</a>
              </div>
            <% } %>
        <% } %>


        <div class="mt-2">
            You can add new images
            <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="gallery" type="file"
              name="images" multiple required>
        </div>
        <div class="mt-3">
            <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit">Add Photo</button>
        </div>
    </form>


<h1 class="text-3xl text-black mt-10">Team Members</h1>
<div class="mt-4">
    <a class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" href="<%= process.env.BaseUrl %>/admin/team/add">Add Member</a>
</div>
<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Name</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Position</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Hostel</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Email Id</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">View</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Edit</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Delete</th>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                <% for (let team of teams){%> 
                    <tr>
                        <td class="w-1/3 text-left py-3 px-4"><%= team.name %></td>
                        <td class="w-1/3 text-left py-3 px-4"><%= team.position %></td>
                        <td class="w-1/3 text-left py-3 px-4"><%= team.hostel %></td>
                        <td class="w-1/3 text-left py-3 px-4"><%= team.email %></td>
                        <td class="w-1/3 text-left py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/team/<%=team._id%>" >View</a></td>
                        <td class="w-1/3 text-left py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/team/<%=team._id%>/edit">Edit</a></td>
                        <td class="w-1/3 text-left py-3 px-4"><form action="<%= process.env.BaseUrl %>/admin/team/<%=team._id%>?_method=DELETE" method="POST"> <button type="submit">Delete</button> </form></td>
                    </tr> 
                <% }%>
            </tbody>
        </table>
    </div>
</div>

  
</main>

<%- include("../partials/footer.ejs") %> 