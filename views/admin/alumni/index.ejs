<%- include("../partials/header.ejs") %> 
<main class="flex-grow w-full p-6">
<!-- <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script> -->


<h1 class="pb-6 text-3xl text-black">Alumni Members</h1>
<div class="mt-6">
    <a class="px-4 py-1 font-light tracking-wider text-white bg-gray-900 rounded" href="<%= process.env.BaseUrl %>/admin/alumni/add">Add Member</a>
</div>
<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="text-white bg-gray-900">
                <tr>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Name</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Email Id</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Experience</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">View</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Edit</th>
                    <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">Delete</th>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                <% for (let alumni of alumnis){%> 
                    <tr>
                        <td class="w-1/3 px-4 py-3 text-left"><%= alumni.name %></td>
                        <td class="w-1/3 px-4 py-3 text-left"><%= alumni.email %></td>
                        <td class="w-1/3 px-4 py-3 text-left"><%= alumni.experience %></td>
                     
                        <td class="w-1/3 px-4 py-3 text-left"><a href="<%= process.env.BaseUrl %>/admin/alumni/<%=alumni._id%>" >View</a></td>
                        <td class="w-1/3 px-4 py-3 text-left"><a href="<%= process.env.BaseUrl %>/admin/alumni/<%=alumni._id%>/edit">Edit</a></td>
                        <td class="w-1/3 px-4 py-3 text-left"><form action="<%= process.env.BaseUrl %>/admin/alumni/<%=alumni._id%>?_method=DELETE" method="POST"> <button type="submit">Delete</button> </form></td>
                    </tr> 
                <% }%>
            </tbody>
        </table>
    </div>
</div>

  
</main>

<%- include("../partials/footer.ejs") %> 