<%- include("../partials/header.ejs") %>
<main class="w-full flex-grow p-6">
<!-- <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script> -->


<h1 class="text-3xl text-black pb-6">Facilities</h1>
<div class="mt-6">
    <a class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" href="<%= process.env.BaseUrl %>/admin/facility/add">Add Info</a>
</div>
<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                   <th class=" w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Name</th>
                    <th class=" w-2/3 text-left py-3 px-4 uppercase font-semibold text-sm">Info</th>

                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">View</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Edit</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Delete</th>
                </tr>
            </thead>
          <tbody>

            <% for (let facility of facilities){%>
                <tr>
                    <td class="w-1/3 text-left py-3 px-4"><%= facility.name %></td>
                    <td class="w-1/3 text-left py-3 px-4"><%= facility.info %></td>
                    <td class="w-1/3 text-left py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/facility/view/<%=facility._id%>" >View</a></td>
                    <td class="w-1/3 text-left py-3 px-4"><a href="<%= process.env.BaseUrl %>/admin/facility/<%=facility._id%>/edit">Edit</a></td>
                    <td class="w-1/3 text-left py-3 px-4"><form action="<%= process.env.BaseUrl %>/admin/facility/<%=facility._id%>?_method=DELETE" method="POST"> <button type="submit">Delete</button> </form></td>

                </tr>
            <% }%>
          </tbody>

        </table>
    </div>
</div>


</main>

<%- include("../partials/footer.ejs") %>
