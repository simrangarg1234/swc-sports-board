  </div>
</div>
<div class="grid grid-cols-3 gap-4 pb-32 ml-8 mr-8">
  <%for(let i=0;i<data.length;i++){%>
    <% if(data[i].Status === "Running"){ %> 
      <%for(let j=0;j<data[i].Images.length;j++){%>
      <div class="mb-2 overflow-hidden rounded-md shadow-md">
        <img src="<%=data[i].Images[j]%>" style="width: 419px; height: 250px" alt="">
      </div>
      <% } %> 
    <% } %> 
  <%}%>
