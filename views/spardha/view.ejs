<% layout('layouts/layout') %> 
<%- include('../partials/carousel')  %> 
<%- include('../partials/navbar') %>

<div class="p-5 w-3/4 m-auto">
    <button
      class="text-gray-800 bg-transparent border border-solid border-gray-800 hover:bg-gray-800 hover:text-white active:bg-gray-900 font-bold uppercase text-sm px-6 py-3 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150"
      type="button">
      <a href="/spardha">Spardha 2021</a>
    </button>
    <button
      class="text-gray-800 bg-transparent border border-solid border-gray-800 hover:bg-gray-800 hover:text-white active:bg-gray-900 font-bold uppercase text-sm px-6 py-3 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150"
      type="button">
      Spardha 2020
    </button>
</div>


<div class="flex flex-col">
    <div class="my-2 overflow-x-auto sm:-mx-6 lg:-mx-6">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-800">
              <tr>
                <th scope="col" class="px-6 py-3 text-center text-sm font-medium text-gray-200 uppercase tracking-wider">
                  Club Name
                </th>
                <th scope="col" class="px-6 py-3 text-center text-sm font-medium text-gray-200 uppercase tracking-wider">
                  Description
                </th>
                <th scope="col" class="px-6 py-3 text-center text-sm font-medium text-gray-200 uppercase tracking-wider">
                  Date / Time
                </th>
                <th scope="col" class="px-6 py-3 text-center text-sm font-medium text-gray-200 uppercase tracking-wider">
                  ScoreCard
                </th>
              </tr>
            </thead>
            <!-- -->
            <tbody class="bg-white divide-y divide-gray-200">   
              <%for(let i=0;i<data.length;i++){%>
                <% if(data[i].Status === "Running"){ %>
              <tr >
                <td class="px-6 py-4 whitespace-nowrap text-sm text-center font-medium text-gray-800">
                  <%=data[i].Clubname%> 
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-gray-500">
                  <%=data[i].Description%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-gray-500">
                  <%=data[i].DateTime%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-gray-500">
                  <div>
                    <a href=<%=data[i].Scorecard%>> <i class="fas fa-arrow-right fa-sm"></i></a>
                 </div>
                </td>
              </tr>
              <% } %> 
          <%}%>
            </tbody>
            <!---->
        </table>
      </div>
    </div>
  </div>
</div>

<div class="what-we-do mt-24 ml-20 mb-12">
  <div class="grid grid-cols-2 gap-8"> 
    <div class="col-span-1 about-header mb-2">
      Photos
    </div>
  </div>
</div>
<div class="grid grid-cols-3 gap-4 ml-8 mr-8 pb-32">
  <%for(let i=0;i<data.length;i++){%>
    <% if(data[i].Status === "Running"){ %> 
      <%for(let j=0;j<data[i].Images.length;j++){%>
      <div class="shadow-md rounded-md overflow-hidden mb-2">
        <img src="<%=data[i].Images[j]%>" style="width: 419px; height: 250px" alt="">
      </div>
      <% } %> 
    <% } %> 
  <%}%>
</div>