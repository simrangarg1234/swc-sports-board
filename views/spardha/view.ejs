<div class="flex flex-col">
    <div class="my-2 overflow-x-auto sm:-mx-6 lg:-mx-6">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-800">
              <tr>
                <th scope="col" class="px-6 py-3 text-sm font-medium tracking-wider text-center text-gray-200 uppercase">
                  Club Name
                </th>
                <th scope="col" class="px-6 py-3 text-sm font-medium tracking-wider text-center text-gray-200 uppercase">
                  Description
                </th>
                <th scope="col" class="px-6 py-3 text-sm font-medium tracking-wider text-center text-gray-200 uppercase">
                  Date / Time
                </th>
                <th scope="col" class="px-6 py-3 text-sm font-medium tracking-wider text-center text-gray-200 uppercase">
                  ScoreCard
                </th>
              </tr>
            </thead>
            <!-- -->
            <tbody class="bg-white divide-y divide-gray-200">   
              <%for(let i=0;i<data.length;i++){%>
                <% if(data[i].Status === "Running"){ %>
              <tr >
                <td class="px-6 py-4 text-sm font-medium text-center text-gray-800 whitespace-nowrap">
                  <%=data[i].Clubname%> 
                </td>
                <td class="px-6 py-4 text-sm text-center text-gray-500 whitespace-nowrap">
                  <%=data[i].Description%>
                </td>
                <td class="px-6 py-4 text-sm text-center text-gray-500 whitespace-nowrap">
                  <%=data[i].DateTime%>
                </td>
                <td class="px-6 py-4 text-sm text-center text-gray-500 whitespace-nowrap">
                  <div>
                    <a href=<%=data[i].Scorecard%>> <i class="fas fa-arrow-right fa-sm"></i></a>
                 </div>
                </td>
              </tr>
              <% } %> 
          <%}%>
            </tbody>
            <!---->
        </table>
