<% layout('layouts/layout') %>
<%- include('../partials/gallery')  %>
<%- include('../partials/navbar') %>

<div class="facility  ml-20 mb-12 mr-20 grid grid-cols-12  ">
  <div class="col-span-12">

    <div class="facilities mt-20">

      <div class="text-4xl font-normal bold mb-12">
        <h1>Facilities</h1>
      </div>


      <div class="sm:grid sm:grid-col-1 lg:gap-6 md:grid md:grid-cols-2 md:gap-8 lg:grid lg:grid-cols-3 lg:gap-12">

        <%for(let facility of data){%>
          <div class="col-span-1 mb-8 border-b-2 border-black-600">

            <div style="cursor: pointer; aspect-ratio:1/1;" class="col-span-1 mb-4 flex flex-wrap pb-10 pt-4">
              <div class="shadow-md overflow-hidden">
                <img src="/<%=facility.image[0]%>" style="width: 100%; height: 100%" alt="">
              </div>
            </div>
            <div class= "text-xl font-normal font-bold"> <%=facility.name%></div>
            <%=facility.info%>
            <%=facility.image[0]%>
            <br><br>
          </div>
        <%}%>
      </div>

    </div>
  </div>

</div>
