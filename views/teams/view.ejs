          xmlns="http://www.w3.org/2000/svg"
        >
          <line
            x1="0.5"
            y1="0.5"
            x2="419.5"
            y2="0.500031"
            stroke="white"
            stroke-linecap="round"
          />
        </svg>
        <div class="flex justify-between mx-3.5 my-2">
          <div class="text-sm text-white"><%= member.email %></div>
          <div class="text-sm text-white"><%= member.contact1 %></div>
        </div>
      </div>
<% } %>
