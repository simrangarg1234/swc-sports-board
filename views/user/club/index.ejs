<% layout('layouts/boilerplate')%>

<h1>All Clubs</h1>
<div>
    <a href="/clubs/new">Add Club</a>
</div>
<% for (let club of clubs){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=club.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= club.title %> </h5>
                <p class="card-text"><%= club.description %></p>

                <a class="btn btn-primary" href="/clubs/<%=club._id%>">View <%=club.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>